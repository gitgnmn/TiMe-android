<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TiMe" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TiMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MtButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/InvisibleButtonThemeOverlay</item>
    </style>

    <style name="InvisibleButtonThemeOverlay">
        <item name="colorPrimary">@color/colorBackground</item>
    </style>


    <style name="Theme.TiMe.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.TiMe.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>